<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wondersgroup.yngs.fragment.XCKCFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.wondersgroup.yngs.widget.LabelText
            android:id="@+id/xckc_entName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelText
            android:id="@+id/xckc_legRpName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelText
            android:id="@+id/xckc_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelInput
            android:id="@+id/xckc_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelInput
            android:id="@+id/xckc_addrType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelNum
            android:id="@+id/xckc_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelSwitch
            android:id="@+id/xckc_isRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelSwitch
            android:id="@+id/xckc_isNecessary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.wondersgroup.yngs.widget.LabelInput
            android:id="@+id/xckc_assess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/label_height">
            <TextView
                android:id="@+id/xckc_checkMan"
                style="@style/LabelText.Left"/>
            <EditText
                android:id="@+id/xckc_checkManOne"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@id/xckc_checkMan"
                android:hint="场地勘察人"
                style="@style/LabelText.Right"/>
            <TextView
                android:id="@+id/xckc_checkManDivider"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                style="@style/LabelText.Right"
                android:layout_toRightOf="@id/xckc_checkManOne"
                android:text="、"/>
            <EditText
                android:id="@+id/xckc_checkManTwo"
                android:layout_width="74dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_toRightOf="@id/xckc_checkManDivider"
                android:hint="场地勘察人"
                style="@style/LabelText.Right"/>
        </RelativeLayout>
        <com.wondersgroup.yngs.widget.LabelInput
            android:id="@+id/xckc_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <include layout="@layout/view_camera"></include>

        <Button
            android:id="@+id/xckc_submit"
            style="@style/ButtonFull"
            android:text="@string/app_submit"/>
    </LinearLayout>

</ScrollView>
