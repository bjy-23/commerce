<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wondersgroup.yngs.activity.DeptSelectActivity">
    <RelativeLayout
        android:id="@+id/dept_toolbar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue">
        <ImageButton
            android:id="@+id/dept_select_back"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:src="@drawable/app_back"
            android:background="@android:color/transparent"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/dept_select_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:textColor="@color/white_snow"
            android:text="@android:string/untitled" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/dept_select_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_below="@+id/dept_toolbar"
        android:layout_marginBottom="48dp"/>
    <Button
        android:id="@+id/dept_select_pre"
        style="@style/ButtonSmall.Larger"
        android:text="上一级"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/dept_select_next"
        style="@style/ButtonSmall.Larger"
        android:text="下一级"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/dept_select_ok"
        style="@style/ButtonSmall.Larger"
        android:text="选择"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="16dp"/>
</RelativeLayout>
