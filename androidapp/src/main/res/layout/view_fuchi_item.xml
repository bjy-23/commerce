<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:contentPaddingLeft="20dp"
    card_view:contentPaddingRight="20dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingBottom="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/fuchi_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昆明瀚尧企业管理咨询有限公司"
            style="@style/TextItemTitle"/>
        <TextView
            android:id="@+id/fuchi_zhucehao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuchi_title"
            style="@style/TextItemContent.Left"
            android:text="注册号"/>
        <TextView
            android:id="@+id/fuchi_regNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuchi_title"
            style="@style/TextItemContent.Right"/>
        <TextView
            android:id="@+id/fuchi_bumen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuchi_regNo"
            style="@style/TextItemContent.Left"
            android:text="扶持部门"/>
        <TextView
            android:id="@+id/fuchi_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuchi_regNo"
            style="@style/TextItemContent.Right"/>
        <TextView
            android:id="@+id/fuchi_riqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuchi_office"
            style="@style/TextItemContent.Left"
            android:text="扶持日期"/>
        <TextView
            android:id="@+id/fuchi_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fuchi_office"
            style="@style/TextItemContent.Right"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>