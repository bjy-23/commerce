<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wondersgroup.yngs.activity.InputActivity">
    <include layout="@layout/view_mid_toolbar"/>
    <Button
        android:id="@+id/input_submit"
        style="@style/ButtonFull"
        android:layout_marginTop="0dp"
        android:text="@string/app_submit"
        android:layout_alignParentBottom="true"/>
    <EditText
        android:id="@+id/input_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_below="@+id/mid_toolbar"
        android:layout_above="@id/input_submit"
        android:hint="@string/app_about"
        android:textColorHint="@color/light_gray"
        android:gravity="left"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:background="@android:color/transparent"/>
</RelativeLayout>
