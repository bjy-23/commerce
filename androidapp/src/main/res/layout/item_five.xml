<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingTop="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="3dp" >

        <TextView
            android:id="@+id/one_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="企业名称:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/one_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="法定代表人"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="3dp" >

        <TextView
            android:id="@+id/two_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="法定代表人:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/two_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="上海人寿"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="3dp" >

        <TextView
            android:id="@+id/three_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="经营状态:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/three_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="上海人寿"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="3dp" >

        <TextView
            android:id="@+id/four_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="经营状态:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/four_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="上海人寿"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="@color/transparent"
        android:orientation="horizontal"
        android:padding="3dp" >

        <TextView
            android:id="@+id/five_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="经营状态:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/five_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:text="上海人寿"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>