<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.wondersgroup.yngs.fragment.BurNingFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="216dp"
        android:background="@drawable/app_logobg">
        <ImageView
            android:layout_width="207dp"
            android:layout_height="133dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:src="@drawable/app_logo"/>
    </RelativeLayout>
    <include layout="@layout/view_home_navi"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:background="@color/gray_light">
        <View
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/deep_gray"
            android:textSize="14sp"
            android:text="当前待办"
            android:layout_centerInParent="true"/>
        <View
            android:layout_width="140dp"
            android:layout_height="1dp"
            android:background="@color/light_gray"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <include layout="@layout/view_net_indicator"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/buring_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
