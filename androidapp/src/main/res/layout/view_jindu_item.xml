<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:contentPaddingLeft="20dp"
    card_view:contentPaddingRight="20dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingBottom="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/jindu_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="66dp"
            android:text="昆明瀚尧企业管理咨询有限公司"
            style="@style/TextItemTitle"/>
        <TextView
            android:id="@+id/jindu_zhucehao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_title"
            style="@style/TextItemContent.Left"
            android:text="注  册  号"/>
        <TextView
            android:id="@+id/jindu_serielNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_title"
            style="@style/TextItemContent.Right.WithIcon"
            android:text="530102100201387"/>
        <TextView
            android:id="@+id/jindu_jingyingdizhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_serielNo"
            style="@style/TextItemContent.Left"
            android:text="经营地址"/>
        <TextView
            android:id="@+id/jindu_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_serielNo"
            style="@style/TextItemContent.Right.WithIcon"
            android:text="云南省昆明市五华区教场西路8号2幢4-1室"/>
        <TextView
            android:id="@+id/jindu_shenqingleixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_addr"
            style="@style/TextItemContent.Left"
            android:text="申请类型"/>
        <TextView
            android:id="@+id/jindu_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_addr"
            style="@style/TextItemContent.Right.WithIcon"
            android:text="小微企业"/>
        <TextView
            android:id="@+id/jindu_shenqingriqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_type"
            style="@style/TextItemContent.Left"
            android:text="申请日期"/>
        <TextView
            android:id="@+id/jindu_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/jindu_type"
            style="@style/TextItemContent.Right.WithIcon"
            android:text="2015-10-31 - 2015-10-31"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="6dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/jindu_icon"
                android:layout_width="32dp"
                android:layout_height="36dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/app_complete"/>
            <TextView
                android:id="@+id/jindu_status"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary"
                android:text="申请成功"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>