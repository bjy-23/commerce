<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/tv_popup_djxx_1"
                android:text="类型" />

            <RadioGroup
                android:id="@+id/radio_group_1"
                style="@style/popup_radio_group">

                <RadioButton
                    style="@style/popup_radio_button"
                    android:text="企业"
                    android:tag="1"/>

                <RadioButton
                    style="@style/popup_radio_button"
                    android:text="个体工商户"
                    android:layout_marginLeft="10dp"
                    android:tag="2"/>
            </RadioGroup>

            <TextView
                style="@style/tv_popup_djxx_1"
                android:text="状态" />

            <com.wondersgroup.commerce.widget.DiyRadioGroup
                android:id="@+id/radio_group_2"
                style="@style/popup_radio_group">

                <RadioButton
                    style="@style/popup_radio_button2"
                    android:text="存续"
                    android:tag="1"/>
                <RadioButton
                    style="@style/popup_radio_button2"
                    android:text="吊销(未注销)"
                    android:tag="2"/>
                <RadioButton
                    style="@style/popup_radio_button2"
                    android:text="吊销(已注销)"
                    android:tag="3"/>
                <RadioButton
                    style="@style/popup_radio_button2"
                    android:text="注销"
                    android:tag="4"/>
                <RadioButton
                    style="@style/popup_radio_button2"
                    android:text="撤销"
                    android:tag="5"/>

            </com.wondersgroup.commerce.widget.DiyRadioGroup>
            <TextView
                style="@style/tv_popup_djxx_1"
                android:text="是否已认领" />

            <RadioGroup
                android:id="@+id/radio_group_3"
                style="@style/popup_radio_group">

            <RadioButton
                style="@style/popup_radio_button"
                android:text="未认领"
                android:tag="0"/>

            <RadioButton
                style="@style/popup_radio_button"
                android:text="已认领"
                android:layout_marginLeft="10dp"
                android:tag="1"/>

            </RadioGroup>

            <TextView
                style="@style/tv_popup_djxx_1"
                android:text="是否列入党建基数" />

            <RadioGroup
                android:id="@+id/radio_group_4"
                style="@style/popup_radio_group">

                <RadioButton
                    style="@style/popup_radio_button"
                    android:text="是"
                    android:tag="1"/>

                <RadioButton
                    style="@style/popup_radio_button"
                    android:text="否"
                    android:layout_marginLeft="10dp"
                    android:tag="0"/>

            </RadioGroup>

            <TextView
                style="@style/tv_popup_djxx_1"
                android:text="更新日期" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_start_date"
                    style="@style/tv_popup_djxx_2"
                    android:text="初始日期" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="#cccccc" />

                <TextView
                    android:id="@+id/tv_end_date"
                    style="@style/tv_popup_djxx_2"
                    android:text="结束日期" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F3F3F3"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_re_select"
            style="@style/textView_select"
            android:text="重置" />

        <TextView
            android:id="@+id/tv_sure"
            style="@style/textView_select"
            android:background="@color/blue"
            android:text="确定"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>