<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_check_box"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/iv_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/checkbox_null"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_item_text"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="4"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvLeagalBasisCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textSize="17sp"
            android:text="定性依据代码："/>
        <TextView
            android:id="@+id/tvLeagalBasisContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:textSize="15sp"
            android:text="销售设计三九四九地"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_star_check_box"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:background="@color/blue">
        <ImageView
            android:id="@+id/iv_star_check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/star_line"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="设为主要"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="定性依据"/>

    </LinearLayout>
</LinearLayout>
