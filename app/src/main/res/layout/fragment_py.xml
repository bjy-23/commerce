<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.wondersgroup.commerce.fragment.PyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/pyInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pyHandleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="8dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pySendLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            <EditText
                android:id="@+id/fragment_py_suggestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="44dp"
                android:hint="办理意见"
                android:textSize="14sp"
                android:textColorHint="@color/white_gray"
                android:background="@android:color/transparent"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:gravity="center_vertical" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/gray_dark"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"/>
            <Button
                android:id="@+id/fragment_py_send"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="签发"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:background="@color/blue"
                android:layout_margin="16dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
