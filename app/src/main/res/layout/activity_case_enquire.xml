<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/view_mid_toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/case_info_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearlayout_button"
            android:scrollbars="vertical">

            <LinearLayout
                android:id="@+id/components_LinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </ScrollView>

        <LinearLayout
            android:id="@+id/linearlayout_button"
            style="@style/enquery_activity_item_linearlayout"
            android:layout_alignParentBottom="true"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/query_button"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginLeft="10dip"
                        android:background="@drawable/serch_btn" />

                    <Button
                        android:id="@+id/clear_btn"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="45dp"
                        android:layout_marginRight="10dip"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/clear_btn" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
