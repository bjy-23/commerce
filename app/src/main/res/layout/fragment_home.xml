<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">

            <com.panxw.android.imageindicator.ImageIndicatorView
                android:id="@+id/indicate_view"
                android:layout_width="match_parent"
                android:layout_height="160dp" />
            <android.support.v4.view.ViewPager
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="72dp"
                android:id="@+id/viewpager_tztg"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_home_menu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:text="最新公文"
            android:textColor="@color/gray"
            android:textSize="12sp" />

        <com.wondersgroup.commerce.widget.ForScrollListView
            android:id="@+id/fragment_ydbg_list_sw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:divider="@drawable/list_item_divider"
            android:dividerHeight="1px" />

    </LinearLayout>
</ScrollView>