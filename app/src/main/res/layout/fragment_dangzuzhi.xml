                android:id="@+id/tv_address"
                style="@style/tv_fragment_base_info_2"
                tools:text="白石中和汇宾酒楼"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                style="@style/tv_fragment_base_info_1"
                android:text="党组织活动场所："/>
            <TextView
                android:id="@+id/tv_act_place"
                style="@style/tv_fragment_base_info_2"
                tools:text="白石中和汇宾酒楼"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                style="@style/tv_fragment_base_info_1"
                android:text="党建活动经费："/>
            <TextView
                android:id="@+id/tv_act_funds"
                style="@style/tv_fragment_base_info_2"
                tools:text="白石中和汇宾酒楼"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                style="@style/tv_fragment_base_info_1"
                android:text="党组书记姓名："/>
            <TextView
                android:id="@+id/tv_secretary_name"
                style="@style/tv_fragment_base_info_2"
                tools:text="白石中和汇宾酒楼"/>

        </RelativeLayout>

        <View
