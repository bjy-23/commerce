            android:layout_height="42dp">

            <TextView
                style="@style/tv_fragment_base_info_1"
                android:text="书记手机号码："/>
            <TextView
                android:id="@+id/tv_secretary_tel"
                style="@style/tv_fragment_base_info_2"
                tools:text="白石中和汇宾酒楼"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <TextView
                style="@style/tv_fragment_base_info_1"
                android:text="书记工作单位及职务："/>
            <TextView
                android:id="@+id/tv_secretary_dept"
                style="@style/tv_fragment_base_info_2"
                tools:text="白石中和汇宾酒楼"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E6E6E6"/>
    </LinearLayout>

</ScrollView>