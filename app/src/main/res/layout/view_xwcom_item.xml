<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:contentPaddingLeft="20dp"
    card_view:contentPaddingRight="20dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingBottom="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/xwcom_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextItemTitle"/>
        <TextView
            android:id="@+id/xwcom_zhucehao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_title"
            style="@style/TextItemContent.Left"
            android:text="注册号：  "/>
        <TextView
            android:id="@+id/xwcom_regNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_title"
            android:layout_toRightOf="@id/xwcom_zhucehao"
            style="@style/TextItemContent.Left"/>
        <TextView
            android:id="@+id/xwcom_capitalType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_regNo"
            style="@style/TextItemContent.Left"
            android:text="注册资本：  "/>
        <TextView
            android:id="@+id/xwcom_capital"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_regNo"
            android:layout_toRightOf="@id/xwcom_capitalType"
            style="@style/TextItemContent.Left"/>
        <TextView
            android:id="@+id/xwcom_shenqingleixing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_capital"
            style="@style/TextItemContent.Left"
            android:text="企业类型：  "/>
        <TextView
            android:id="@+id/xwcom_entType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_capital"
            android:layout_toRightOf="@id/xwcom_shenqingleixing"
            style="@style/TextItemContent.Left"/>
        <TextView
            android:id="@+id/xwcom_shenqingriqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_entType"
            style="@style/TextItemContent.Left"
            android:text="登记机关：  "/>
        <TextView
            android:id="@+id/xwcom_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/xwcom_entType"
            android:layout_toRightOf="@id/xwcom_shenqingriqi"
            style="@style/TextItemContent.Left"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>