<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="4dp"
    card_view:contentPaddingLeft="20dp"
    card_view:contentPaddingRight="20dp"
    card_view:contentPaddingTop="16dp"
    card_view:contentPaddingBottom="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tongji_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextItemTitle"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tongji_title"
            style="@style/TextItemContent.Left"
            android:text="注册号"/>
        <TextView
            android:id="@+id/tongji_regNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tongji_title"
            style="@style/TextItemContent.Right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tongji_regNo"
            style="@style/TextItemContent.Left"
            android:text="负责人"/>
        <TextView
            android:id="@+id/tongji_office"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tongji_regNo"
            style="@style/TextItemContent.Right"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tongji_office"
            style="@style/TextItemContent.Left"
            android:text="经营地址"/>
        <TextView
            android:id="@+id/tongji_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tongji_office"
            style="@style/TextItemContent.Right"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>